<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/md_theme_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- Título "Avançado" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/createText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="viewStart"
                android:text="Avançado"
                android:padding="8dp"
                android:layout_marginStart="12dp"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_close_24"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:layout_gravity="end"/>

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="@color/md_theme_primary" />

        <!-- Lista de Filtros com Checkboxes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tipo de Publicação -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de publicação"
                android:textSize="14sp"

                android:paddingBottom="8dp"/>

            <CheckBox
                android:id="@+id/checkbox_revista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revista"
                android:padding="8dp"/>

            <CheckBox
                android:id="@+id/checkbox_livros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Livros"
                android:padding="8dp"/>

            <!-- Ordenação -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ordenação"
                android:textSize="14sp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

            <CheckBox
                android:id="@+id/checkbox_relevancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relevância"
                android:padding="8dp"/>

            <CheckBox
                android:id="@+id/checkbox_recente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mais recente"
                android:padding="8dp"/>

            <!-- Filtro -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtro"
                android:textSize="14sp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

            <CheckBox
                android:id="@+id/checkbox_gratuitos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gratuitos"
                android:padding="8dp"/>

            <CheckBox
                android:id="@+id/checkbox_pagos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pagos"
                android:padding="8dp"/>

            <!-- Idiomas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idiomas"
                android:textSize="14sp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

            <CheckBox
                android:id="@+id/checkbox_portugues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Português"
                android:padding="8dp"/>

            <CheckBox
                android:id="@+id/checkbox_ingles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inglês"
                android:padding="8dp"/>

            <CheckBox
                android:id="@+id/checkbox_espanhol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Espanhol"
                android:padding="8dp"/>

            <CheckBox
                android:id="@+id/checkbox_frances"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Francês"
                android:padding="8dp"/>

            <CheckBox
                android:id="@+id/checkbox_alemao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alemão"
                android:padding="8dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
